{
  "name": "@jeash/knex-meta",
  "version": "1.3.3",
  "description": "Utility extensions for knex query builder",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./@types/knex.d.ts",
  "scripts": {
    "dev": "nodemon -r tsconfig-paths/register index.ts",
    "test": "vitest",
    "build": "tsup",
    "build:watch": "npm run build -- --watch src",
    "release": "release-it",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "knex",
    "extend knex"
  ],
  "author": "Ernie Jeash Villahermosa",
  "license": "ISC",
  "dependencies": {
    "@types/lodash": "^4.14.182",
    "bluebird": "^3.7.2",
    "dedent": "^0.7.0",
    "dotenv": "^16.0.3",
    "fast-glob": "^3.2.12",
    "knex": "^2.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.3",
    "mysql": "^2.18.1",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^6.1.3"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "7.32.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "4.0.1",
    "jest": "^28.1.2",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.18",
    "release-it": "^15.2.0",
    "ts-node": "^10.8.2",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "vitepress": "^1.0.0-alpha.49",
    "vitest": "^0.17.0",
    "vue": "^3.2.47"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KarmaBlackshaw/knex-meta.git"
  },
  "bugs": {
    "url": "https://github.com/KarmaBlackshaw/knex-meta/issues"
  },
  "homepage": "https://github.com/KarmaBlackshaw/knex-meta#readme",
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "cd ../../ && npm run format"
  }
}

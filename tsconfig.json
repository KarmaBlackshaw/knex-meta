{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["./utils/*"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitThis": false,
    "skipLibCheck": true
  },
  "exclude": ["src/**/*.test.ts", "node_modules", "dist"]
}
